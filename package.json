  "devDependencies": {
    "@antfu/eslint-config": "^4.16.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.32",
    "@unocss/eslint-plugin": "^66.3.2",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "less": "^4.3.0",
    "npm-run-all2": "^8.0.4",
    "typescript": "~5.8.0",
